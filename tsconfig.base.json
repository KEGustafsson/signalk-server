{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "${configDir}/lib",
    "rootDir": "${configDir}/src",
    "allowJs": true,
    "typeRoots": ["${configDir}/src/types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "ts-node": {
    "files": true
  }
}
